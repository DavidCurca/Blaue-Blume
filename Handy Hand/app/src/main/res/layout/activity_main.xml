<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/topIcon"
            android:layout_centerHorizontal="true"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:background="@drawable/layout_bg"
            android:id="@+id/learn"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/topIcon"
            android:layout_width="336dp"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/verdana"
                android:text="Invata"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="70dp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/layout_bg"
            android:id="@+id/translate"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/learn"
            android:layout_width="336dp"
            android:layout_height="150dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/verdana"
                android:text="Traduce"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="70dp" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/layout_bg"
            android:id="@+id/about"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/translate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textAb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/verdana"
                android:text="Despre"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <TextView
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textAb"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/verdana"
                android:text="blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah blah "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>